    <script>$(document).ready(function () {

            const socket = io();
            socket.on("connectedUsersCount", (count) => {
                const connectedUsersCount = document.getElementById("connected-users-count");
                connectedUsersCount.textContent = count;
            });

            // Add event listener for delete icon clicks
            $('.delete').on('click', function () {
                // Get the product ID from the data attribute
                const productId = $(this).data('product-id');

                // Store the current row to remove it later
                const row = $(this).closest('tr');

                // Send an asynchronous request to delete the product
                $.ajax({
                    url: '/admin/delete-product',
                    method: 'POST',
                    data: { productIdToDelete: productId },
                    success: function (response) {
                        // Handle the success response, e.g., show a success message
                        console.log('Product deleted successfully');

                        // Remove the table row from the DOM
                        row.remove();
                    },
                    error: function (xhr, status, error) {
                        // Handle the error response, e.g., show an error message
                        console.error(error);
                    }
                });
            });
        });

        $('.edit').on('click', function () {
            // Get the product ID from the data attribute
            const productId = $(this).find('i').data('product-id');

            // Set the product ID value in the modal input field
            $('#productIdToUpdate').val(productId);
        });


    </script>


