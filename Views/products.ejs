                        <div class="col-md-6">
                          <button
                            type="button"
                            class="btn btn-primary btn-sm btn-block addToCart"
                            data-product-id="<%= products[i]._id %>"
                          >
                            Add To Cart
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
              <!-- Add more product cards as needed -->
