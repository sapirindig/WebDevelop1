    <script src="/socket.io/socket.io.js"></script>
    <script
      type="text/javascript"
      src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"
    ></script>

    <script>
      $(document).ready(function () {
        // Handle connected users count
        const socket = io();
        socket.on("connectedUsersCount", (count) => {
          const connectedUsersCount = document.getElementById(
            "connected-users-count"
          );
          connectedUsersCount.textContent = count;
        });

        // Add event listener to "Add to Cart" buttons
        $(".addToCart").click(function (event) {
          event.preventDefault();
          const productId = $(this).data("product-id");
          $.post(`/cart/${productId}`, function (response) {
            alert("Product added to cart!");
          }).fail(function (error) {
            alert(
              "Failed to add product to cart. Please log in or create an account."
            );
          });
        });

        // Filter products based on selected filters
        $(".Filter").click(function (event) {
          event.preventDefault();
          const filterType = $(this).data("filter");
          const filterValue = $(this).data("value");
          filterProducts(filterType, filterValue);
        });

        // Clear all filters
        $("#clearFiltersBtn").click(function (event) {
          event.preventDefault();
          $(".product-card").show();
          $(".Filter.active").removeClass("active");
        });

        // Search products
        $("#searchInput").on("input", function () {
          const searchValue = $(this).val().toLowerCase();
          filterSearchProducts(searchValue);
        });

        function filterSearchProducts(searchValue) {
          $(".product-card").hide();
          $(".product-card").each(function () {
            const title = $(this).find(".card-title").text().toLowerCase();
            const description = $(this).find(".card-text").text().toLowerCase();
            if (
              title.includes(searchValue) ||
              description.includes(searchValue)
            ) {
              $(this).show();
            }
          });
        }

        function filterProducts(filterType, filterValue) {
          $(".product-card").hide();
          if (
            filterType === "category" ||
            filterType === "color" ||
            filterType === "size" ||
            filterType === "gender"
          ) {
            $(`.product-card[data-${filterType}="${filterValue}"]`).show();
          }
        }
      });
    </script>

